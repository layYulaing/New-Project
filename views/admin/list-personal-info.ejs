<!DOCTYPE html>
<html lang="en">

<%- include('../partials/header'); %>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

         <!-- Sidebar -->
         <%- include('../partials/sidebar'); %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include('../partials/topbar'); %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <!-- <h1 class="h3 mb-4 text-gray-800">Personal Information</h1> -->
                    <div class="container">
                        <div class="card shadow mb-12">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Personal Information</h6>
                            </div>
                            <div class="card-body">
                                <% if(result.length > 0) { %>
                                <% result.forEach((val) => { %>
                                <form class="user" action="/category/create" method="post" enctype="multipart/form-data">
                                    <div class="form-group" align="center">
                                        <img width="250px" height="250px" src="/uploads/<%= val.avarta %>" alt="">
                                    </div>
                                    <div class="form-group">
                                    
                                        <input type="text" value="<%= val.fullname %>" class="form-control form-control-user" disabled>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" value="<%= val.nick_name %>" class="form-control form-control-user" disabled>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" value="<%= val.current_position %>" class="form-control form-control-user" disabled>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" value="<%= val.status %>" class="form-control form-control-user" disabled>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" value="<%= val.email %>" class="form-control form-control-user" disabled>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" value="<%= val.phone %>" class="form-control form-control-user" disabled>
                                    </div>
                                    <div class="form-group">
                                        <textarea class="form-control" name="aboutme" id="exampleFormControlTextarea1" rows="3" placeholder="Describe yourself here..." style="border-radius: 1rem;" disabled><%= val.about_me %></textarea>
                                    </div>
                                    <hr>
                                </form>
                                <a href="/admin/personal-info/edit/<%= val.id %>" class="btn btn-success btn-user btn-block" >
                                    <i class="fas fa-pen fa-sm text-white-50"></i> Edit</a>
                                </a><a href="/admin/personal-info/delete/<%= val.id %>" class="btn btn-danger btn-user btn-block" >
                                    <i class="fas fa-trash fa-sm text-white-50"></i> Delete</a>
                                </a>
                                <% }) %>
                                <% } else { %>
                                <a href="/admin/personal-info/create" class="btn btn-primary btn-user btn-block" >
                                    Create
                                </a>
                                <% } %>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include('../partials/footer'); %>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <%- include('../partials/scriptLink'); %>

</body>

</html>